<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".StartActivity"
        android:background="@color/back">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/logo" android:layout_margin="32dp" />
    <TextView android:layout_margin="32dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/white" android:textSize="28sp" android:text="Просканируйте QR код на кассе чтобы получить начальные деньги."/>
    <ImageView android:layout_margin="44dp" android:id="@+id/qcIV" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Button android:layout_gravity="center_horizontal" android:id="@+id/enterBTN" android:layout_width="wrap_content" android:layout_height="44dp" android:text="Войти" android:background="@drawable/button_yellow"/>
</LinearLayout>