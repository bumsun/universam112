<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".StartActivity"
        android:background="@color/back">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Просканируйте QR код на кассе чтобы получить начальные деньги."/>
    <ImageView android:id="@+id/qcIV" android:layout_width="400dp" android:layout_height="400dp" />
    <Button android:layout_gravity="center_horizontal" android:id="@+id/enterBTN" android:layout_width="wrap_content" android:layout_height="44dp" android:text="Войти" android:background="@drawable/button_yellow"/>
</LinearLayout>